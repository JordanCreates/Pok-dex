@page
@model Pokédex.Pages.Kanto.IndexModel


@{
    ViewData["Title"] = "Index";
    var number = 1;
}

<h1>Kanto Pokédex</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Pokédex Number
            </th>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokémon[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokémon[0].Type1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pokémon[0].Type2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pokémon) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DexNumber)
            </td>

            <td>
                @{
                    var spritepath = "/images/sprites/sprite" + number + ".png";
                    number = number + 1;
                }
                <img src="@spritepath" />

            </td>


            <td>
                <a asp-page="./Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type2)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>